#:kivy 1.0.9

#:import utils kivy.utils 

<GameStatsScreen>:
	BoxLayout:
        BoxLayout:
        	orientation: 'vertical'
	    	size_hint: .3, 1
	    	canvas.before:
				Color:
				    rgba: .1, .1, .1, 1
				Rectangle:
				    pos: self.pos
				    size: self.size
			
				
			ScrollView:
				size_hint: 1, .8
			
				Label:
					text: app.gameStatsText
					font_size: 30
					size_hint_x: 1.0
					size_hint_y: None
					text_size: self.width, None
					height: self.texture_size[1]
					markup: True
		    Button:
				size_hint: 1, .1
				text: 'Next Players Stats'
				on_release: app.switchPlayerStats()
				
		    Button:
		    	size_hint: 1, .1
                text: 'Back to settings'
                on_release: app.root.ids.ScrnMngr.current = 'Game Settings'
		        
	    FloatLayout:
	    	size_hint: .7,1
		    canvas.before:
